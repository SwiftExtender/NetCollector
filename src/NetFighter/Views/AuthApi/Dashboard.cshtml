<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NetFighter Dashboard</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <p>User: </p>
    <div id="app">
        <div class="app-container">
            <header class="app-header">
                <h1>NetFighter</h1>
                <nav class="main-nav">
                    <button class="nav-btn active" data-view="dashboard">Dashboard</button>
                    <button class="nav-btn">Domains</button>
                    <button class="nav-btn">Subnets</button>
                    <button class="nav-btn">Hosts</button>
                    <button class="nav-btn">Ports</button>

                    <button class="nav-btn">Vhosts</button>
                    <button class="nav-btn">Urls</button>
                    <button class="nav-btn">Keywords</button>
                    <button class="nav-btn">Params</button>
                    <button class="nav-btn">Requests</button>
                    
                    
                    <button class="nav-btn">Scan Profiles</button>
                    <button class="nav-btn">Tool Profiles</button>
                    <button class="nav-btn">Tools</button>
                    <form action="/Logout" method="post">
                        <button class="logout-btn" type="submit" name="logout-submit">Logout</button>
                    </form>
                </nav>
            </header>
            <main class="app-main">
                <div id="content"></div>
            </main>
        </div>
    </div>
    <div class="dashboard">
        <h2>Dashboard</h2>
        <div class="stats-grid">
            <div class="stat-card">
                <h3>Hosts</h3>
                <p class="stat-number" id="hostsCount">-</p>
            </div>
            <div class="stat-card">
                <h3>Domains</h3>
                <p class="stat-number" id="domainsCount">-</p>
            </div>
            <div class="stat-card">
                <h3>Ports</h3>
                <p class="stat-number" id="portsCount">-</p>
            </div>
        </div>
    </div>

    <script src="/js/netfighter-api.js"></script>
    <script src="/js/ui-components.js"></script>
    <script src="/js/app.js"></script>
</body>
</html>